<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TransactionActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/amountEntry"
        android:layout_marginRight="32dp"
        android:onClick="onClickConfirm"
        android:text="Confirm" />

    <EditText
        android:id="@+id/amountEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/categoryEntry"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:text="Amount" />

    <EditText
        android:id="@+id/categoryEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/amountEntry"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:text="Category" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/yearEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/categoryEntry"
        android:layout_alignLeft="@+id/categoryEntry"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:text="year" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:layout_toLeftOf="@+id/button1"
        android:onClick="onClickCancel"
        android:text="Cancel" />

    <EditText
        android:id="@+id/dayEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yearEntry"
        android:layout_alignLeft="@+id/yearEntry"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:text="day" />

    <EditText
        android:id="@+id/monthEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dayEntry"
        android:layout_alignLeft="@+id/dayEntry"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:text="month" />

</RelativeLayout>
